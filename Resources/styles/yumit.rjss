/*
  COLORS
  darkRed:'#940000'
*/

/*
    Windows
*/
#defaultWindow {
  barColor:'#940000',
  backgroundColor:'#fff'
}

/*
    ImageView
*/
#defaultImageView {
   top:Yumit.constants.spacing,
   left:Yumit.constants.spacing,
   height:Yumit.constants.imgDimensions,
   width:Yumit.constants.imgDimensions,
   borderRadius:5
}
/*
 Yums
*/
#yumImageView {
   top:65,
   left:Yumit.constants.spacing,
   height:305,
   width:305,
   defaultImage:'/images/dish-default-big.png',
   borderRadius:0
}
#yumLabelTags {
  color:"#ffffff",
  borderRadius:3,
  shadowColor:"#999",
  shadowOffset:{x:1, y:0},
  font: {
    fontFamily:Yumit.constants.fontFamily,
    fontSize:10,
    fontWeight:'bold'
  },
  height:'auto',
  textAlign:'left'
}

/*
    Labels
*/
#labelBold {
  color:'#000000',
  font: {
    fontFamily:Yumit.constants.fontFamily,
    fontSize:14,
    fontWeight:'bold'
  },
  top:Yumit.constants.spacing,
  height:Yumit.constants.nameHeight,
  left:Yumit.constants.avatarOffset
}
#labelNormal {
  color:Yumit.constants.textColor,
  font: {
    fontFamily:Yumit.constants.fontFamily,
    fontSize:12
  },
  height:'auto',
  top: Yumit.constants.spacing+Yumit.constants.nameHeight,
  right:Yumit.constants.spacing,
  textAlign:'left',
  left:Yumit.constants.avatarOffset
}
#labelLight {
  color:Yumit.constants.grayTextColor,
  font: {
    fontFamily:Yumit.constants.fontFamily,
    fontSize:10
  },
  height:'auto',
  width:'auto',
  top:Yumit.constants.spacing,
  right:Yumit.constants.spacing
}

/*
    Buttons
*/
#PostAYum {
  color:'#940000',
  highlightedColor:'#0f0',
  width:200,
  height:40,
  top:120
}